{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "plugins": [],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "react/prefer-stateless-function": "off",
        // "object-curly-newline": [
        //     "error",
        //     {
        //         "ObjectPattern": {
        //             "multiline": true,
        //             "minProperties": 4
        //         },
        //         "ImportDeclaration": "never",
        //         "ExportDeclaration": {
        //             "multiline": true,
        //             "minProperties": 2
        //         }
        //     }
        // ],
        "quotes": [
            "error",
            "single"
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/jsx-max-props-per-line": [
            true,
            {
                "maximum": 1,
                "when": "always"
            }
        ],
        "semi": [
            "error",
            "never"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "space-before-function-paren": [
            "error",
            "always"
        ],
        "import/no-extraneous-dependencies": [
            error,
            {
                devDependencies: [
                    "Tests/**/*.js",
                ]
            }
        ],
    }
}